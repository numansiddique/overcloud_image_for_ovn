   shared_examples_for 'ovn northd' do
     it 'includes params' do
@@ -56,6 +76,7 @@ describe 'ovn::northd' do
           }
         end
         it_behaves_like 'ovn northd'
+        it_behaves_like 'systemd env'
       end
     end
